{
    "manifest_version": 2,
    "name": "Habit Breaker",
    "version": "0.1",
    "description": "Tackle doom scrolling and reorient your focus towards more important tasks.",
    "permissions": [
        "activeTab",
        "storage"
    ],
    "homepage_url": "https://github.com/Tyrest/habit-breaker",
    "icons": {
        "48": "HabitBreaker.svg",
        "96": "HabitBreaker.svg"
    },
    "browser_action": {
        "default_icon": "HabitBreaker.svg",
        "default_title": "Habit Breaker",
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "web_accessible_resources": ["content.css"]
}
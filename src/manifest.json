{
    "manifest_version": 3,
    "name": "Habit Breaker",
    "version": "0.1",
    "description": "Tackle doom scrolling and reorient your focus towards more important tasks.",
    "permissions": [
        "activeTab",
        "storage"
    ],
    "icons": {
        "16": "HabitBreaker16.png",
        "48": "HabitBreaker48.png",
        "128": "HabitBreaker128.png"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "HabitBreaker16.png",
            "48": "HabitBreaker48.png",
            "128": "HabitBreaker128.png"
        }
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ]
        }
    ]
}